<div class="faq-block">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12">
				<div class="heading">
					<h1>
						{{label}}
					</h1>
				</div>
			</div>
			<div class="col-lg-9">
				<div class="faq-wrapper accordion" id="accordion">
					{{content}}
				</div>
			</div>
		</div>
	</div>
</div>

 <script>



let faqHeader = document.querySelectorAll(".faq-question");

for (let i = 0; i < faqHeader.length; i++) {
    faqHeader[i].addEventListener("click", function () {
        document.querySelectorAll(".faq-answer").forEach(function (answer) {
            answer.classList.remove("faq-show");
        })
		document.querySelectorAll(".faq-question").forEach(function (question) {
            question.classList.remove("faq-question-show");
        });
		faqHeader[i].classList.add("faq-question-show")
        faqHeader[i].nextElementSibling.classList.add("faq-show");
    });
}


</script>
