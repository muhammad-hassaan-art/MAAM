{# Get the URL path of the current page #}
{% set currentPath = url('<current>') %}
{% set currenPathString = currentPath['#markup'] %}

{# Split the URL path into an array of components #}
{% set currentPathLast = currenPathString|split('/') %}
{# Get the last component of the path #}
{% set lastPathComponent = currentPathLast|last %}

<div class="map-block {% if lastPathComponent  == 'participating-communities' %}custom-map-width{% endif %}">
  <div class="map-bg-content">{{ content.field_map }}</div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xl-8"></div>
      <div class="col-md-6 col-xl-4">
        <div class="map-content">
          <h2>{{ label }}</h2>
          <p>{{ content.body }}</p>
          {% if content.field_card_link[0] %}
            <div class="map-link">
              <a href="{{ content.field_card_link[0]['#url'] }}">{{ content.field_card_link[0]['#title'] }}</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

